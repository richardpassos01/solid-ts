{
  "name": "solid",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "tsnd --transpile-only --respawn --ignore-watch node_modules src/server.ts",
    "dev": "DEBUG=TS-PROJECT:* ts-node-dev --respawn --transpile-only src/server.ts",
    "test:unit": "cross-env NODE_ENV=test jest test/unit --coverage",
    "test:functional": " node -r dotenv/config node_modules/.bin/jest test/functional --coverage --detectOpenHandles --forceExit --runInBand",
    "lint:fix": "npx eslint . --ext .ts --fix",
    "lint": "npx eslint . --ext .ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "npm run lint",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "eslint": "^7.9.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-airbnb-typescript": "^10.0.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.2",
    "husky": "^4.3.0",
    "lint-staged": "^10.3.0",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "@types/nodemailer": "^6.4.0",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "nodemailer": "^6.4.11",
    "ts-node-dev": "^1.0.0-pre.62",
    "uuidv4": "^6.2.3",
    "debug": "^4.1.1",
    "@types/debug": "^4.1.5"
  }
}
